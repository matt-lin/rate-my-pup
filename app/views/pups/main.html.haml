%body{:id=>"background"}
    %section{:class => "find_pup"}
        //TOP PART (Tagline, Buttons)
        %div{:class => "row top"}
            %div{:class => "row tagline col-lg-12"}
                %h1{:id => "titleline"}
                    Information to improve the dogs in our lives, and the lives of dogs
                %h2{:id => "tagline-text"} 
                    Find a pup from a <strong>reliable</strong> source
                    //First Row 
            %div{:class => "row col-lg-12"}
                %div{:class => "col-lg-4 box-a text-center"}
                    %a{:class => "main-button-link button-a", :href => "pups/dog_name"}
                        %div{:class => "main-button"}
                            %div{:class => "main-button-small-text"}
                                Rate your
                            %div{:class => "main-button-large-text"}
                                Dog
                %div{:class => "col-lg-4 box-b box-move hidden"}
                    %div{:class => "panel panel-default"}
                        %div{:class => "panel-heading"}
                            %h3{:class => "panel-title"}
                                Search for ratings by breed:
                                %span{:id => "cancel-b"}
                                    %a{:class => "cancel"} &#10006;
                        %div{:class => "panel-body"}
                            =label :pup, "Please indecate the breed you are looking for"
                            = form_tag breed_path, :method => :get, :class => "form-horizontal", :autocomplete => "off" do
                                %div{:class => "form-group great text-center", :class => "sub-title"}
                                    = text_field :breed, :name, :class => "form-control", :id => "breed_find", :placeholder => "Breed Name"
                                %div{:id => 'breed_autofills', :class => "form-group col-md-12"}
                                %div{:class => "form-group", :class => "button-positioning"}
                                    = submit_tag 'Find ratings for this breed', :id => 'Find Breed', :class => "form-control"
                %div{:class => "col-lg-4 box-b text-center"}
                    %a{:class => "main-button-link button-b"}
                        %div{:class => "main-button"}
                            %div{:class => "main-button-small-text"}
                                Find Ratings for a
                            %div{:class => "main-button-large-text"}
                                Breed
                %div{:class => "col-lg-4 box-c box-move hidden"}
                    %div{:class => "panel panel-default"}
                        %div{:class => "panel-heading"}
                            %h3{:class => "panel-title"}
                                Find a breeder or kennel by name:
                                %span{:id => "cancel-c"}
                                    %a{:class => "cancel"} &#10006;
                        %div{:class => "panel-body"}
                            = form_tag breeder_search_path, :method => :get, :class => "form-horizontal", :autocomplete => "off" do
                                %div{:class => "form-group", :class => "homepage-div"}
                                    = text_field :breeder, :name, :class => "form-control", :id => "breeder_find", :placeholder => "Breeder Name"
                                    %div{:id => 'breeder_find_autofills', :class => "list-group"}
                                    %div{:class => "form-group", :class => "button-positioning"}
                                        = submit_tag 'Find ratings for this breeder', :id => 'Find Breeder', :class => "form-control"
                %div{:class => "col-lg-4 box-c text-center"}
                    %a{:class => "main-button-link button-c"}
                        %div{:class => "main-button"}
                            %div{:class => "main-button-small-text"}
                                Find Ratings for a 
                            %div{:class => "main-button-large-text"}
                                Breeder
    //Second Row
    %div{:class => "row"}
        %section{:class => "comment-of-the-day"}
            %div{:class => "row col-lg-12"}
                %header{:class => "span24"}
                    %h2 Comment of the Day
                    %h3 "My affenpinscher is very easy to train!"
                    %h3 ---- Pup Gizmo
    //Third Row
